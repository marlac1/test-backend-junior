{
  "name": "BOY Test",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.yml"
  ],
  "service": "api",
  "workspaceFolder": "/home/app",
  "shutdownAction": "stopCompose",
  "extensions": [
    "ms-python.vscode-pylance",
    "visualstudioexptteam.vscodeintellicode",
    "ryanluker.vscode-coverage-gutters",
    "oderwat.indent-rainbow",
    "mikestead.dotenv",
    "ms-python.python",
    "2gua.rainbow-brackets",
    "brainfit.vscode-importmagic",
    "littlefoxteam.vscode-python-test-adapter",
    "rangav.vscode-thunder-client",
    "eamodio.gitlens"
  ],
  "settings": {
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.pythonPath": "/home/vscode/venv/bin/python",
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.testing.pytestArgs": [],
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.profiles.linux": {
      "zsh": {
        "path": "/usr/bin/zsh",
        "args": [
          "-l"
        ]
      }
    },
    "thunder-client.loadFromProject": true,
    "thunder-client.workspaceRelativePath": ".thunderclient",
    "thunder-client.showActivityFromCollection": true,
    "python.linting.banditEnabled": true,
    "python.formatting.blackArgs": [
      "--line-length=99"
    ],
    "coverage-gutters.coverageReportFileName": "coverage/index.html",
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showRulerCoverage": true,
    "python.testing.pytestEnabled": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "[python]": {
      "editor.codeActionsOnSave": {
        "source.organizeImports": true,
      },
    },
    "files.eol": "\n"
  }
}